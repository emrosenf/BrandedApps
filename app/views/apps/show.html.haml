.container
  .content
    .row
      .span4
        %h3 Your Application
        %ul.unstyled
          %li
            = link_to "Dashboard", app_path(@instance)
          %li
            = link_to "Messages", messages_app_path(@instance)
          %li
            = link_to "Settings", settings_app_path(@instance)
          %li
            = link_to "Analytics", analytics_app_path(@instance)
      .span12
        - flash.each do |name, msg|
          .alert-message.fade.in{:class => name, "data-alert" => "alert"}
            %a.close{:href => "#"} x
            %p #{msg}
        .page-header
          %h2 Dashboard
          = form_tag(users_path, {:class => "form", :method => "POST", :enctype => "multipart/form-data"}) do
            %fieldset
              %legend Login Information
              .clearfix
                %label Your Name
                .input
                  %input.span3{:type=>"text", :name => "first_name", :placeholder => "First Name"}
                  %input.span3{:type=>"text", :name => "last_name", :placeholder => "Last Name"}
              .clearfix
                %label Email Address
                .input
                  %input.span5{:type=>"text", :name => "email"}
              .clearfix
                %label Password
                .input
                  %input.span5{:type => "password", :name => "password"}
              .clearfix
                %label Confirm Password
                .input
                  %input.span5{:type => "password", :name => "password_confirmation"}
                  %span.help-block{:style => "display:none;"} Passwords must match
        

            .actions
              %a.btn.primary Update